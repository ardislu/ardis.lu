{
  "name": "ardis-lu-frontend",
  "version": "0.0.0",
  "description": "This is the frontend for a personal website.",
  "keywords": [
    "angular",
    "angularjs",
    "personal",
    "frontend"
  ],
  "contributors": [
    "Ardis Lu <ardis@ardis.lu> (https://ardis.lu)"
  ],
  "scripts": {
    "postinstall": "git config core.hooksPath ./.git-hooks",
    "ng": "ng",
    "lint": "ng lint && stylelint \"src/**/*.scss\"",
    "test": "ng test",
    "e2e": "ng e2e",
    "build": "ng build",
    "postbuild": "purgecss --css dist/ardis-lu-frontend/*.css --content dist/ardis-lu-frontend/index.html dist/ardis-lu-frontend/*.js --output dist/ardis-lu-frontend/",
    "cloudflared": "cloudflared tunnel",
    "start": "ng serve --hmr --host 0.0.0.0",
    "start:tunnel": "run-p \"start -- --disable-host-check\" \"cloudflared -- --url localhost:4200\"",
    "stage": "npm run build -- --configuration production && cd dist/ardis-lu-frontend && ws --spa index.html --log.format stats --compress",
    "stage:tunnel": "run-p stage \"cloudflared -- --url localhost:8000\"",
    "analyze": "npm run build -- --configuration production --source-map --vendor-chunk=false && source-map-explorer dist/ardis-lu-frontend/main.*.js"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^14.0.3",
    "@angular/cdk": "^14.0.3",
    "@angular/common": "^14.0.3",
    "@angular/compiler": "^14.0.3",
    "@angular/core": "^14.0.3",
    "@angular/forms": "^14.0.3",
    "@angular/material": "^14.0.3",
    "@angular/platform-browser": "^14.0.3",
    "@angular/platform-browser-dynamic": "^14.0.3",
    "@angular/router": "^14.0.3",
    "@angular/service-worker": "^14.0.3",
    "@auth0/auth0-spa-js": "^1.22.1",
    "fuse.js": "^6.6.2",
    "rxjs": "~7.5.5",
    "tslib": "^2.4.0",
    "zone.js": "~0.11.6"
  },
  "devDependencies": {
    "@angular-builders/jest": "^14.0.0",
    "@angular-devkit/build-angular": "^14.0.3",
    "@angular-eslint/builder": "^14.0.0",
    "@angular-eslint/eslint-plugin": "^14.0.0",
    "@angular-eslint/eslint-plugin-template": "^14.0.0",
    "@angular-eslint/schematics": "^14.0.0",
    "@angular-eslint/template-parser": "^14.0.0",
    "@angular/cli": "^14.0.3",
    "@angular/compiler-cli": "^14.0.3",
    "@ngneat/spectator": "^11.0.2",
    "@schematics/angular": "^14.0.3",
    "@types/jest": "^28.1.3",
    "@types/node": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^5.29.0",
    "@typescript-eslint/parser": "^5.29.0",
    "eslint": "^8.18.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsdoc": "^39.3.3",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "jest": "^28.1.1",
    "jest-preset-angular": "^12.1.0",
    "local-web-server": "^5.2.1",
    "ng-mocks": "^14.0.1",
    "npm-run-all": "^4.1.5",
    "playwright": "^1.22.2",
    "purgecss": "^4.1.3",
    "source-map-explorer": "^2.5.2",
    "stylelint": "^14.9.1",
    "stylelint-config-standard-scss": "^4.0.0",
    "stylelint-scss": "^4.2.0",
    "ts-node": "~10.8.1",
    "typescript": "~4.7.4"
  }
}
