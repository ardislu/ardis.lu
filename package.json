{
  "name": "ardis-lu-frontend",
  "version": "0.0.0",
  "description": "This is the frontend for a personal website.",
  "keywords": [
    "angular",
    "angularjs",
    "personal",
    "frontend"
  ],
  "contributors": [
    "Ardis Lu <ardis@ardis.lu> (https://ardis.lu)"
  ],
  "scripts": {
    "postinstall": "git config core.hooksPath ./git-hooks",
    "ng": "ng",
    "lint": "ng lint && stylelint \"src/**/*.scss\"",
    "test": "ng test",
    "e2e": "ng e2e",
    "build": "ng build",
    "cloudflared": "cloudflared tunnel",
    "start": "ng serve --hmr --host 0.0.0.0",
    "start:tunnel": "run-p \"start -- --disable-host-check\" \"cloudflared -- --url localhost:4200\"",
    "stage": "ng build --configuration production && cd dist/ardis-lu-frontend && ws --spa index.html --log.format stats",
    "stage:tunnel": "run-p stage \"cloudflared -- --url localhost:8000\"",
    "analyze": "ng build --configuration production --source-map --vendor-chunk=false && source-map-explorer dist/ardis-lu-frontend/main.*.js"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^13.0.0",
    "@angular/cdk": "^13.0.0",
    "@angular/common": "^13.0.0",
    "@angular/compiler": "^13.0.0",
    "@angular/core": "^13.0.0",
    "@angular/flex-layout": "^12.0.0-beta.34",
    "@angular/forms": "^13.0.0",
    "@angular/material": "^13.0.0",
    "@angular/platform-browser": "^13.0.0",
    "@angular/platform-browser-dynamic": "^13.0.0",
    "@angular/router": "^13.0.0",
    "@angular/service-worker": "^13.0.0",
    "@auth0/auth0-spa-js": "^1.17.0",
    "fuse.js": "^6.4.6",
    "hammerjs": "^2.0.8",
    "ngx-google-analytics": "^11.2.1",
    "ngx-skeleton-loader": "^4.0.0",
    "rxjs": "~7.4.0",
    "tslib": "^2.3.1",
    "typescript": "^4.4.4",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-builders/jest": "^12.1.0",
    "@angular-devkit/build-angular": "^13.0.1",
    "@angular-eslint/builder": "^12.3.1",
    "@angular-eslint/eslint-plugin": "^12.3.1",
    "@angular-eslint/eslint-plugin-template": "^12.3.1",
    "@angular-eslint/schematics": "^12.3.1",
    "@angular-eslint/template-parser": "^12.3.1",
    "@angular/cli": "^13.0.1",
    "@angular/compiler-cli": "^13.0.0",
    "@ngneat/spectator": "^8.0.3",
    "@schematics/angular": "^12.2.1",
    "@types/jest": "^27.0.0",
    "@types/node": "^16.6.0",
    "@typescript-eslint/eslint-plugin": "4.29.1",
    "@typescript-eslint/parser": "4.29.1",
    "eslint": "^7.32.0",
    "eslint-plugin-import": "2.24.0",
    "eslint-plugin-jsdoc": "36.0.7",
    "eslint-plugin-prefer-arrow": "1.2.3",
    "jest": "^27.0.6",
    "jest-preset-angular": "^9.0.5",
    "local-web-server": "^5.1.0",
    "ng-mocks": "^12.4.0",
    "npm-run-all": "^4.1.5",
    "playwright": "^1.13.1",
    "protractor": "^7.0.0",
    "source-map-explorer": "^2.5.2",
    "stylelint": "^13.13.1",
    "stylelint-config-standard-scss": "^1.1.0",
    "stylelint-scss": "^3.20.1",
    "ts-node": "~10.2.0"
  }
}