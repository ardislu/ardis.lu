{
  "name": "ardis-lu-frontend",
  "version": "0.0.0",
  "description": "This is the frontend for a personal website.",
  "keywords": [
    "angular",
    "angularjs",
    "personal",
    "frontend"
  ],
  "contributors": [
    "Ardis Lu <ardis@ardis.lu> (https://ardis.lu)"
  ],
  "scripts": {
    "postinstall": "git config core.hooksPath ./.git-hooks",
    "ng": "ng",
    "lint": "ng lint && stylelint \"src/**/*.scss\"",
    "test": "ng test",
    "e2e": "ng e2e",
    "build": "ng build",
    "cloudflared": "cloudflared tunnel",
    "start": "ng serve --hmr --host 0.0.0.0",
    "start:tunnel": "run-p \"start -- --disable-host-check\" \"cloudflared -- --url localhost:4200\"",
    "stage": "ng build --configuration production && cd dist/ardis-lu-frontend && ws --spa index.html --log.format stats",
    "stage:tunnel": "run-p stage \"cloudflared -- --url localhost:8000\"",
    "analyze": "ng build --configuration production --source-map --vendor-chunk=false && source-map-explorer dist/ardis-lu-frontend/main.*.js"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^14.0.3",
    "@angular/cdk": "^13.3.9",
    "@angular/common": "^14.0.3",
    "@angular/compiler": "^14.0.3",
    "@angular/core": "^14.0.3",
    "@angular/flex-layout": "^13.0.0-beta.38",
    "@angular/forms": "^14.0.3",
    "@angular/material": "^13.3.9",
    "@angular/platform-browser": "^14.0.3",
    "@angular/platform-browser-dynamic": "^14.0.3",
    "@angular/router": "^14.0.3",
    "@angular/service-worker": "^14.0.3",
    "@auth0/auth0-spa-js": "^1.22.1",
    "fuse.js": "^6.6.2",
    "hammerjs": "^2.0.8",
    "rxjs": "~7.5.5",
    "tslib": "^2.4.0",
    "typescript": "~4.6.4",
    "zone.js": "~0.11.6"
  },
  "devDependencies": {
    "@angular-builders/jest": "^13.0.4",
    "@angular-devkit/build-angular": "^14.0.3",
    "@angular-eslint/builder": "^13.5.0",
    "@angular-eslint/eslint-plugin": "^13.5.0",
    "@angular-eslint/eslint-plugin-template": "^13.5.0",
    "@angular-eslint/schematics": "^13.5.0",
    "@angular-eslint/template-parser": "^13.5.0",
    "@angular/cli": "^14.0.3",
    "@angular/compiler-cli": "^14.0.3",
    "@ngneat/spectator": "^9.0.0",
    "@schematics/angular": "^13.3.8",
    "@types/jest": "^27.5.2",
    "@types/node": "^16.11.41",
    "@typescript-eslint/eslint-plugin": "5.29.0",
    "@typescript-eslint/parser": "5.29.0",
    "eslint": "^8.18.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsdoc": "^37.9.7",
    "eslint-plugin-prefer-arrow": "1.2.3",
    "jest": "^27.5.1",
    "jest-preset-angular": "^11.1.2",
    "local-web-server": "^5.2.1",
    "ng-mocks": "^12.5.1",
    "npm-run-all": "^4.1.5",
    "playwright": "^1.22.2",
    "protractor": "^7.0.0",
    "source-map-explorer": "^2.5.2",
    "stylelint": "^14.9.1",
    "stylelint-config-standard-scss": "^3.0.0",
    "stylelint-scss": "^4.2.0",
    "ts-node": "~10.8.1"
  }
}
