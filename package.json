{
  "name": "ardis-lu-frontend",
  "version": "0.0.0",
  "description": "This is the frontend for a personal website.",
  "keywords": [
    "angular",
    "angularjs",
    "personal",
    "frontend"
  ],
  "contributors": [
    "Ardis Lu <ardis@ardis.lu> (https://ardis.lu)"
  ],
  "scripts": {
    "postinstall": "git config core.hooksPath ./.git-hooks",
    "ng": "ng",
    "lint": "ng lint && stylelint \"src/**/*.scss\"",
    "test": "ng test",
    "e2e": "ng e2e",
    "build": "ng build",
    "cloudflared": "cloudflared tunnel",
    "start": "ng serve --hmr --host 0.0.0.0",
    "start:tunnel": "run-p \"start -- --disable-host-check\" \"cloudflared -- --url localhost:4200\"",
    "stage": "ng build --configuration production && cd dist/ardis-lu-frontend && ws --spa index.html --log.format stats",
    "stage:tunnel": "run-p stage \"cloudflared -- --url localhost:8000\"",
    "analyze": "ng build --configuration production --source-map --vendor-chunk=false && source-map-explorer dist/ardis-lu-frontend/main.*.js"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^13.0.2",
    "@angular/cdk": "^13.0.2",
    "@angular/common": "^13.0.2",
    "@angular/compiler": "^13.0.2",
    "@angular/core": "^13.0.2",
    "@angular/flex-layout": "^13.0.0-beta.36",
    "@angular/forms": "^13.0.2",
    "@angular/material": "^13.0.2",
    "@angular/platform-browser": "^13.0.2",
    "@angular/platform-browser-dynamic": "^13.0.2",
    "@angular/router": "^13.0.2",
    "@angular/service-worker": "^13.0.2",
    "@auth0/auth0-spa-js": "^1.19.2",
    "fuse.js": "^6.5.3",
    "hammerjs": "^2.0.8",
    "rxjs": "~7.4.0",
    "tslib": "^2.3.1",
    "typescript": "^4.4.4",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-builders/jest": "^13.0.0",
    "@angular-devkit/build-angular": "^13.0.3",
    "@angular-eslint/builder": "^13.0.1",
    "@angular-eslint/eslint-plugin": "^13.0.1",
    "@angular-eslint/eslint-plugin-template": "^13.0.1",
    "@angular-eslint/schematics": "^13.0.1",
    "@angular-eslint/template-parser": "^13.0.1",
    "@angular/cli": "^13.0.3",
    "@angular/compiler-cli": "^13.0.2",
    "@ngneat/spectator": "^9.0.0",
    "@schematics/angular": "^13.0.3",
    "@types/jest": "^27.0.3",
    "@types/node": "^16.11.11",
    "@typescript-eslint/eslint-plugin": "5.5.0",
    "@typescript-eslint/parser": "5.5.0",
    "eslint": "^8.7.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jsdoc": "^37.0.3",
    "eslint-plugin-prefer-arrow": "1.2.3",
    "jest": "^27.4.7",
    "jest-preset-angular": "^11.0.1",
    "local-web-server": "^5.1.1",
    "ng-mocks": "^12.5.0",
    "npm-run-all": "^4.1.5",
    "playwright": "^1.17.2",
    "protractor": "^7.0.0",
    "source-map-explorer": "^2.5.2",
    "stylelint": "^14.2.0",
    "stylelint-config-standard-scss": "^3.0.0",
    "stylelint-scss": "^4.1.0",
    "ts-node": "~10.4.0"
  }
}
